<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:colorBackground">@color/gray</item>
        <item name="android:buttonStyle">@style/BeatBoxButtonMat</item>
    </style>

    <style name="BeatBoxButtonHolo" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BeatBoxButtonMat" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>
</resources>
